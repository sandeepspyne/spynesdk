<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CameraActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.camera.view.PreviewView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/defaults"
                android:visibility="invisible"
                android:contentDescription="@string/app_name" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<!--            <androidx.appcompat.widget.Toolbar-->
<!--                android:id="@+id/my_toolbar"-->
<!--                android:layout_width="match_parent"-->
<!--                android:background="@color/transparents"-->
<!--                android:layout_height="wrap_content">-->
                <LinearLayout
                    android:id="@+id/llToolBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/back"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        app:tint="@color/white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etSkuName"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/bg_edit"
                            android:fontFamily="@font/medium"
                            android:gravity="center"
                            android:hint="@string/sku_names"
                            android:maxLines="1"
                            android:maxLength="20"
                            android:padding="@dimen/dp_5"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/sp_13" />
                        <ImageView
                            android:id="@+id/imgNext"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="@dimen/dp_5"
                            android:src="@drawable/right"
                            android:visibility="gone"
                            app:tint="@color/white" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_5"
                        android:visibility="invisible"
                        android:src="@drawable/right" />

                </LinearLayout>

<!--            </androidx.appcompat.widget.Toolbar>-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:layout_height="0dp">
                <androidx.camera.view.PreviewView
                    android:id="@+id/viewFinder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/imgOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/defaults"
                    android:contentDescription="@string/app_name" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:background="@color/transparents"
                android:orientation="vertical">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSubcategories"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvInteriorFrames"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/ivGallery"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:gravity="center"
                            android:src="@mipmap/gallery" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/camera_capture_button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/click_effect"
                        android:layout_height="wrap_content"
                        android:elevation="2dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/dp_5"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardOverlay"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            app:cardCornerRadius="@dimen/dp_50">
                            <ImageView
                                android:id="@+id/ivPreview"
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:fontFamily="@font/bold"
                                android:gravity="center"
                                android:elevation="@dimen/dp_5"
                                android:padding="@dimen/sp_5"
                                android:background="@drawable/bg_round" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:id="@+id/llProgress"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvshoot"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_10"
                        android:fontFamily="@font/bold"
                        android:gravity="center"
                        android:textColor="@color/light"
                        android:textSize="@dimen/sp_13" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProgress"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/dp_10"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/camera_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/black" />

    </FrameLayout>


</LinearLayout>