<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.OtpActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/back"
                app:tint="@color/black" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="@dimen/dp_10">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/signin"
            android:layout_margin="@dimen/dp_10"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter"
            android:fontFamily="@font/light"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"/>
        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_30"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:gravity="center">
            <EditText
                android:id="@+id/etOne"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:layout_margin="@dimen/dp_5"
                android:fontFamily="@font/bold"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="number"
                android:background="@drawable/bg_edit_black"/>
            <EditText
                android:id="@+id/ettwo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:layout_margin="@dimen/dp_5"
                android:maxLength="1"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:inputType="number"
                android:background="@drawable/bg_edit_black"/>
            <EditText
                android:id="@+id/etThree"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:layout_margin="@dimen/dp_5"
                android:fontFamily="@font/bold"
                android:maxLength="1"
                android:inputType="number"
                android:gravity="center"
                android:background="@drawable/bg_edit_black"/>
            <EditText
                android:id="@+id/etFour"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:layout_margin="@dimen/dp_5"
                android:maxLength="1"
                android:inputType="number"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:background="@drawable/bg_edit_black"/>
            <EditText
                android:id="@+id/etFive"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:layout_margin="@dimen/dp_5"
                android:maxLength="1"
                android:inputType="number"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:background="@drawable/bg_edit_black"/>
            <EditText
                android:id="@+id/etSix"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:maxLength="1"
                android:fontFamily="@font/bold"
                android:inputType="number"
                android:layout_margin="@dimen/dp_5"
                android:gravity="center"
                android:background="@drawable/bg_edit_black"/>


        </LinearLayout>
        <TextView
            android:id="@id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/the_otp"
            android:fontFamily="@font/light"
            android:gravity="center"
            android:visibility="invisible"
            android:textColor="@color/errorcolor"
            android:textSize="@dimen/sp_13"/>


        <TextView
            android:id="@+id/tvSubmitOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_otp"
            android:textColor="@color/white"
            android:gravity="center"
            android:elevation="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/bold"
            android:background="@drawable/bg_edit_button_round"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/did_not"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00 : 30 Sec"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_margin="@dimen/dp_5"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvResend"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resend"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:textColor="@color/primary"
            android:elevation="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>