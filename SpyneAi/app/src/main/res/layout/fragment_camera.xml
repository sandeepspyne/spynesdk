<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:keepScreenOn="true">




    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llCapture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_5">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardOverlay"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                app:cardCornerRadius="@dimen/dp_50">

                <ImageView
                    android:id="@+id/ivPreview"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:background="@color/black"
                    android:padding="@dimen/sp_5" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ImageView
            android:id="@+id/cameraCaptureButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="2dp"
            android:src="@drawable/click_effect" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ivEndProject"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:visibility="invisible"
                android:src="@drawable/ic_end_project" />
        </LinearLayout>
    </LinearLayout>

    <com.spyneai.shoot.ui.base.GyroView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/flLevelIndicator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/viewFinder"
        android:background="@android:color/transparent"/>

    <com.spyneai.camera.TapFocusExposure
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/flTapToFocus"
        app:layout_constraintBottom_toBottomOf="@id/viewFinder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewFinder">
    </com.spyneai.camera.TapFocusExposure>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/setting_bg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent">

    <LinearLayout
        android:id="@+id/llSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="@dimen/dp_5"
        android:background="@color/setting"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/setting"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"/>
        <ImageView
            android:id="@+id/ivCross"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_25"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/cross">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llShowOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone"
        android:background="@color/setting_item"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Overlay"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:fontFamily="@font/poppins_medium"/>

        <Switch
            android:id="@+id/switchShowOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"></Switch>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llShowGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
       android:visibility="gone"
        android:background="@color/setting_item"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Camera Grid"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16"
            android:fontFamily="@font/poppins_medium"/>
        <Switch
            android:id="@+id/switchShowGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"></Switch>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llShowGyro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
       android:visibility="gone"
        android:background="@color/setting_item"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Show Gyrometer"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <Switch
            android:id="@+id/switchShowGyro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"></Switch>

    </LinearLayout>
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/sp_25"
        android:visibility="gone"
        android:textColor="@color/primary"
        android:id="@+id/tvPitchRoll"
        android:text="Sandeep Singh"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/dp_10"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_5"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/viewFinder"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/tvPitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"></TextView>

        <TextView
            android:id="@+id/tvRoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/white"></TextView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>