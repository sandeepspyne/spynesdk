    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/rlCapturedImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewCamera" />

    <RelativeLayout
        android:id="@+id/rlCapturedImage"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/llCapture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></RelativeLayout>

    <LinearLayout
        android:id="@+id/llCapture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_5">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardOverlay"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                app:cardCornerRadius="@dimen/dp_50">

                <ImageView
                    android:id="@+id/ivPreview"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/black"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:padding="@dimen/sp_5" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ImageView
            android:id="@+id/cameraCaptureButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="2dp"
            android:src="@drawable/click_effect" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ivEndProject"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:src="@drawable/ic_end_project"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/flLevelIndicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp_20"
        app:layout_constraintBottom_toTopOf="@+id/rlCapturedImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewCamera">

        <ImageView
            android:id="@+id/ivTopLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/ic_top_left" />

        <ImageView
            android:id="@+id/ivBottomLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:src="@drawable/ic_bottom_left" />

        <ImageView
            android:id="@+id/ivGryroRing"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_gravity="center"
            android:src="@drawable/ic_gyro_ring" />

        <TextView
            android:id="@+id/tvCenter"
            android:layout_width="@dimen/dp_50"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="@color/black" />

        <ImageView
            android:id="@+id/tvLevelIndicator"
            android:layout_width="@dimen/dp_30"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_gyro_error" />


        <ImageView
            android:id="@+id/ivTopRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_top_right" />

        <ImageView
            android:id="@+id/ivBottomRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:src="@drawable/ic_bottom_right" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flTapToFocus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rlCapturedImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewCamera"
        app:layout_constraintTop_toTopOf="parent"></FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
