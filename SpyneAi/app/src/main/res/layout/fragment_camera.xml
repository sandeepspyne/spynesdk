<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <RelativeLayout
        android:id="@+id/viewCamera"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/llSkip"
            android:visibility="invisible"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tvSkipShoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_5"
                android:fontFamily="@font/bold"
                android:text="@string/skip"
                android:textColor="@color/primary"
                android:textSize="@dimen/sp_16"
                />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/skip"
                android:id="@+id/ivSkip"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_2"
                app:tint="@color/primary" />

        </LinearLayout>


    </RelativeLayout>

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewCamera" />

    <RelativeLayout
        android:id="@+id/rlCapturedImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/viewFinder"/>

    <LinearLayout
        android:id="@+id/llCapture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_5">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardOverlay"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                app:cardCornerRadius="@dimen/dp_50">

                <ImageView
                    android:id="@+id/ivPreview"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:background="@color/black"
                    android:padding="@dimen/sp_5" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ImageView
            android:id="@+id/cameraCaptureButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="2dp"
            android:src="@drawable/click_effect" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ivEndProject"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:visibility="invisible"
                android:src="@drawable/ic_end_project" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/flLevelIndicator"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/rlCapturedImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewCamera"
        android:layout_margin="@dimen/dp_20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_top_left"
            android:layout_gravity="left"
            android:id="@+id/ivTopLeft"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bottom_left"
            android:layout_gravity="left|bottom"
            android:id="@+id/ivBottomLeft"/>

        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_gravity="center"
            android:id="@+id/ivGryroRing"
            android:src="@drawable/ic_gyro_ring"/>

        <TextView
            android:layout_width="@dimen/dp_50"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:id="@+id/tvCenter"
            android:background="@color/black"/>

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="3dp"
            android:background="@drawable/bg_gyro_error"
            android:id="@+id/tvLevelIndicator"
            android:layout_gravity="center"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_top_right"
            android:layout_gravity="right"
            android:id="@+id/ivTopRight"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bottom_right"
            android:layout_gravity="right|bottom"
            android:id="@+id/ivBottomRight"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/flTapToFocus"
        app:layout_constraintBottom_toTopOf="@+id/rlCapturedImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewCamera"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/sp_25"
        android:visibility="gone"
        android:textColor="@color/primary"
        android:id="@+id/tvPitchRoll"
        android:text="Sandeep Singh"/>


</androidx.constraintlayout.widget.ConstraintLayout>