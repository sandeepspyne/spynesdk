<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:layout_gravity="center"
    android:padding="@dimen/dp_10"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/we_recommend"
        android:gravity="center"
        android:fontFamily="@font/medium"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/primary"
        android:layout_gravity="center"
        android:id="@+id/tvSkuNameDialog"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_70"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/ivOne" />
        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_70"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/ivTwo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_70"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/ivThree"
            android:src="@mipmap/idemo3"/>
        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_70"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/ivFour"
            android:src="@mipmap/idemo4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:textColor="@color/primary"
            android:fontFamily="@font/medium"
            android:textSize="@dimen/sp_15"
            android:layout_margin="@dimen/dp_5"
            android:maxLines="1"
            android:background="@drawable/bg_skip"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/tvShootNowInterior"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/shoot_now"
            android:padding="@dimen/dp_5"
            android:maxLines="1"
            android:gravity="center"
            android:layout_margin="@dimen/dp_5"
            android:textColor="@color/white"
            android:fontFamily="@font/medium"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/bg_rectangle_button_ripple"
            android:textAllCaps="false"/>
    </LinearLayout>




</LinearLayout>