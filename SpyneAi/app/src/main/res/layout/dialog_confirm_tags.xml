<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_30"
    android:paddingRight="@dimen/dp_30"
    android:paddingTop="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/clLeft"
        android:background="@drawable/cl_left"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/ivClicked"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@id/btReshootImage"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@id/btReshootImage">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ivOverlay"
                />

        </FrameLayout>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/primary"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@id/ivClicked"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/sp_14"
            tools:text="Front View"/>

        <TextView
            android:id="@+id/btReshootImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_reshoot"
            android:padding="@dimen/dp_12"
            android:gravity="center"
            android:fontFamily="@font/medium"
            android:textSize="@dimen/sp_15"
            android:layout_margin="@dimen/dp_10"
            android:textAllCaps="false"
            android:textColor="@color/tags_title_color"
            android:background="@drawable/bg_border_ripple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/clRight"
        android:background="@drawable/cl_right"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/primary"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/sp_16"
            android:text="Add Tags"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tvImageCategory"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:text="@string/image_category"
            android:id="@+id/tvImageCategoryLabel"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/tags_title_color"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tvImageCategoryLabel"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Miscellaneous"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/tvImageCategory"
            android:textColor="@color/primary"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/sp_16"/>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvImageCategory"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llTagsContainer"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_150">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/llSpinners"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="@id/flSpinner"
                            app:layout_constraintBottom_toBottomOf="@id/flSpinner"
                            android:text="Imperfection Location"
                            android:id="@+id/tvLocation"
                            app:layout_constraintRight_toLeftOf="@id/flSpinner"
                            android:textColor="@color/tags_title_color"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="@dimen/sp_14"/>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/tvLocation"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:background="@drawable/bg_tags_spinner"
                            android:id="@+id/flSpinner"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_2">

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary"
                                android:id="@+id/spLocation"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="@dimen/sp_16" />

                        </FrameLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="@id/flType"
                            app:layout_constraintBottom_toBottomOf="@id/flType"
                            android:text="Imperfection Location"
                            android:id="@+id/tvType"
                            app:layout_constraintRight_toLeftOf="@id/flType"
                            android:textColor="@color/tags_title_color"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="@dimen/sp_14"/>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/tvType"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:background="@drawable/bg_tags_spinner"
                            android:id="@+id/flType"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_2">

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary"
                                android:id="@+id/spType"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="@dimen/sp_16" />

                        </FrameLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="@id/flSeverity"
                            app:layout_constraintBottom_toBottomOf="@id/flSeverity"
                            android:text="Imperfection Location"
                            android:id="@+id/tvSeverity"
                            app:layout_constraintRight_toLeftOf="@id/flSeverity"
                            android:textColor="@color/tags_title_color"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="@dimen/sp_14"/>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/tvSeverity"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:background="@drawable/bg_tags_spinner"
                            android:id="@+id/flSeverity"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_2">

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary"
                                android:id="@+id/spSeverity"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="@dimen/sp_16" />

                        </FrameLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/clNotes">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvNotes"
                        android:text="@string/additionl_settings"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textSize="@dimen/sp_10"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etNotes"
                        android:hint="@string/add_text_here"
                        android:gravity="top"
                        app:layout_constraintTop_toBottomOf="@id/tvNotes"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:inputType="textMultiLine"
                        android:maxLength="300"
                        android:lines="5"
                        android:textSize="@dimen/sp_10"
                        android:padding="@dimen/dp_10"
                        android:background="@drawable/bg_tags_spinner"
                        android:layout_marginTop="@dimen/dp_10"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/btConfirmImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:padding="@dimen/dp_12"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/medium"
            android:textSize="@dimen/sp_15"
            android:layout_margin="@dimen/dp_10"
            android:textAllCaps="false"
            android:background="@drawable/bg_rectangle_button_ripple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>