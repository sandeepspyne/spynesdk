<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".credits.LowCreditsActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_height"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="10dp"
            android:background="@color/white"
            android:id="@+id/fl_tool_bar">

            <ImageView
                android:layout_width="@dimen/tool_bar_height"
                android:layout_height="@dimen/tool_bar_height"
                android:src="@drawable/back"
                android:padding="@dimen/dp_15"
                app:tint="@color/black"
                android:id="@+id/iv_back"/>

            <ImageView
                android:layout_width="@dimen/tool_bar_height"
                android:layout_height="@dimen/tool_bar_height"
                android:src="@drawable/wallet"
                android:padding="@dimen/dp_12"
                android:id="@+id/iv_wallet"
                android:layout_gravity="right"
                android:layout_marginRight="3dp"/>


        </FrameLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/fl_tool_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/iv_opps_gif"
            android:adjustViewBounds="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opps!"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"
            android:id="@+id/tv_oops"
            app:layout_constraintTop_toBottomOf="@id/iv_opps_gif"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_oops"
            android:gravity="center"
            android:textSize="14sp"
            android:id="@+id/tv_opps_description"
            android:layout_marginTop="@dimen/dp_5"
            android:text="Looks like you donâ€™t have enough \ncredits."/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/tv_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:background="@color/line_separator"
            app:layout_constraintTop_toBottomOf="@id/tv_opps_description"
            android:layout_marginTop="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Full Size Image"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toBottomOf="@id/tv_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="@font/medium"
            android:id="@+id/tv_download_full_size"
            android:layout_marginTop="@dimen/dp_25"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/tv_download_full_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/interior_demo_one"
            android:layout_marginTop="@dimen/dp_25"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/iv_donwlaod_preview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_donwlaod_preview"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:id="@+id/tv_image_details"
            android:text="Full Image (1920 x 1080)"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="15sp"
            android:textColor="@color/image_download_preview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_donwlaod_preview"
            app:layout_constraintLeft_toRightOf="@id/tv_image_details"
            app:layout_constraintRight_toLeftOf="@id/tv_no_water_mark"
            android:text="|"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="15sp"
            android:textColor="@color/image_download_preview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_donwlaod_preview"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="40dp"
            android:text="No Watermark"
            android:id="@+id/tv_no_water_mark"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="15sp"
            android:textColor="@color/image_download_preview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_buy_and_download"
            android:text="Buy Credits Now"
            android:id="@+id/tv_buy_credits_now"
            android:textColor="@color/white"
            android:background="@drawable/bg_round_button_ripple"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingRight="@dimen/dp_25"
            android:paddingLeft="@dimen/dp_25"
            android:textSize="18sp"
            android:layout_marginBottom="@dimen/dp_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_buy_credits_now"
            android:text="  1 Image = 1 Credit"
            android:textColor="@color/black"
            android:fontFamily="@font/medium"
            android:layout_marginBottom="@dimen/dp_25"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy credits &amp; download full size image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tv_buy_and_download"
            android:textColor="@color/image_download_preview"
            android:layout_marginBottom="50dp"
            android:textSize="12sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
