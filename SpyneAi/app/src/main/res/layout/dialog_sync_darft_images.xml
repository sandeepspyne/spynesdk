<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5"
    android:layout_margin="@dimen/dp_5"
    android:gravity="center"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/lldialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_channel"
        android:elevation="@dimen/dp_10"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivCoins"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/no_internet"
            app:tint="@color/primary" />


        <TextView
            android:id="@+id/tvReqCredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivCoins"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Draft Images Not Synced!"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvReqCredit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Please connect with internet to\n and retry to sync draft images"
            android:textColor="@color/tags_title_color"
            android:textSize="@dimen/sp_14" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tvRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_rectangle_button_ripple"
            android:text="Retry"
            android:textAllCaps="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="@dimen/dp_50"
            android:paddingRight="@dimen/dp_50"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/dp_20"/>

    </RelativeLayout>

</RelativeLayout>
