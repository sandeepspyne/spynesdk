<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.OrderSummaryActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="@dimen/dp_5"
        android:backgroundTint="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Light" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_10"
                android:src="@drawable/back"
                app:tint="@color/black" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/order_summary"
                android:textColor="@color/black"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/back"
                android:padding="@dimen/dp_10"
                android:visibility="invisible"
                app:tint="@color/black" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".activity.OrderActivity"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".activity.OrderActivity"
            android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:text="@string/category"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvCategoryName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:hint="@string/automobile"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"/>
                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_10"
                android:layout_margin="@dimen/dp_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="@dimen/dp_10"
                        app:cardCornerRadius="@dimen/dp_5">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ivProductImage"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_200"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:scaleType="fitXY"
                                android:src="@mipmap/defaults"/>
                            <ImageView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:src="@mipmap/multi"
                                android:layout_margin="@dimen/dp_15"
                                android:contentDescription="@string/app_name" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/dp_10">
                        <TextView
                            android:id="@+id/tvNoOfImages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:hint="8"
                            android:layout_alignParentLeft="true"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/black"/>


                        <TextView
                            android:layout_toRightOf="@+id/tvNoOfImages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:text="@string/images"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:textSize="@dimen/sp_16"
                            android:background="@null"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/tvSkuId"
                            android:fontFamily="@font/medium"
                            android:text="@string/sku_id"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/black"
                            android:layout_marginRight="@dimen/dp_5"/>

                        <TextView
                            android:id="@+id/tvSkuId"
                            android:maxLength="5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/medium"
                            android:hint="1234"
                            android:background="@null"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/black"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </ScrollView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_1"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/dp_5">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:text="@string/total_images_clicked"
                        android:textSize="@dimen/sp_16"
                        android:background="@null"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvTotalImagesClicked"
                        android:layout_width="wrap_content"
                        android:gravity="end"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:hint="0"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:fontFamily="@font/bold"
                        android:text="@string/images"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textSize="@dimen/sp_16"
                        android:background="@null"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/dp_5">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:text="@string/total_cost"
                        android:background="@null"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvTotalCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:fontFamily="@font/bold"
                        android:gravity="end"
                        android:hint="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:id="@+id/tv_credits"
                        android:fontFamily="@font/bold"
                        android:text="@string/credits"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textSize="@dimen/sp_16"
                        android:background="@null"
                        android:textColor="@color/black"/>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/dp_5">

                    <TextView
                        android:id="@+id/tvCreditAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:text="@string/credits_available"
                        android:background="@null"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvTopUp"
                        android:layout_toRightOf="@+id/tvCreditAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:text="@string/top_up_2"
                        android:textSize="@dimen/sp_16"
                        android:background="@null"
                        android:textColor="@color/primary"/>
                    <TextView
                        android:id="@+id/tvCreditsAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:hint="0"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_toLeftOf="@+id/tvCredits"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvCredits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/bold"
                        android:text="@string/credits"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textSize="@dimen/sp_16"
                        android:background="@null"
                        android:textColor="@color/black"/>

                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/tvDownloadHdImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/bg_downloadall"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:fontFamily="@font/medium"
                    android:padding="@dimen/dp_5"
                    android:text="@string/download_hd_images"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@null"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</LinearLayout>