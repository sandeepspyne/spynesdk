<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_15"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/give_permissions"
        android:gravity="center"
        android:fontFamily="@font/medium"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/dp_15"
        android:layout_marginHorizontal="@dimen/dp_10"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_gravity="center_vertical"
             android:src="@drawable/camera">

         </ImageView>




         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/camera_access"
             android:fontFamily="@font/poppins_regular"
             android:textSize="@dimen/sp_15"
             android:textColor="@color/black"
             android:layout_margin="@dimen/dp_5" />


     </LinearLayout>

         <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
             android:layout_marginHorizontal="@dimen/dp_10"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_gravity="center_vertical"
             android:src="@drawable/files">

         </ImageView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/file_and_media"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black"
        android:layout_margin="@dimen/dp_5" />

         </LinearLayout>



         <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
             android:layout_marginHorizontal="@dimen/dp_10"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_gravity="center_vertical"
             android:src="@drawable/location">

         </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/location_access"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black"
        android:layout_margin="@dimen/dp_5" />

         </LinearLayout>
    <TextView
        android:id="@+id/btGivePermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_permission_setting"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
       android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_10"
        android:textColor="@color/white"
        android:fontFamily="@font/medium"
        android:textSize="@dimen/sp_15"
        android:background="@drawable/bg_rectangle_button_ripple"
        android:textAllCaps="false"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>