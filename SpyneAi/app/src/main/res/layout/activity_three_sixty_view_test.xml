<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".videorecording.ThreeSixtyInteriorViewActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_height"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="10dp"
            android:background="@color/white"
            android:id="@+id/fl_tool_bar">

            <ImageView
                android:layout_width="@dimen/tool_bar_height"
                android:layout_height="@dimen/tool_bar_height"
                android:src="@drawable/back"
                android:padding="@dimen/dp_15"
                app:tint="@color/black"
                android:id="@+id/iv_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tittle"
                android:layout_gravity="center"
                android:text="Preview"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </FrameLayout>


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_front"
            android:scaleType="fitXY"
            app:riv_corner_radius="6dp"
            app:riv_mutate_background="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fl_tool_bar"
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_front"
            android:id="@+id/cl_front"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:elevation="3dp"
            android:visibility="invisible"
            android:background="@drawable/bg_interior_view_shadow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front view"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/medium"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/dp_10"
                android:id="@+id/iv_share"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:id="@+id/tv_share"
                app:layout_constraintRight_toLeftOf="@id/iv_share"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="5dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_front_helper"
            app:layout_constraintBottom_toBottomOf="@id/iv_front"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_5"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fl_tool_bar"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_30"
            android:id="@+id/sv_front"
            android:visibility="visible"
            android:background="@drawable/bg_three_sixty_shimmer"/>





        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_back_view"
            android:scaleType="fitXY"
            app:riv_corner_radius="6dp"
            app:riv_mutate_background="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_front"
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_back_helper"
            app:layout_constraintBottom_toBottomOf="@id/iv_back_view"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_5"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_back_view"
            android:id="@+id/cl_back"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:elevation="3dp"
            android:visibility="invisible"
            android:background="@drawable/bg_interior_view_shadow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back view"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/medium"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/dp_10"
                android:id="@+id/iv_back_share"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:id="@+id/tv_back_share"
                app:layout_constraintRight_toLeftOf="@id/iv_back_share"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="5dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_front"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:id="@+id/sv_back"
            android:visibility="visible"
            android:background="@drawable/bg_three_sixty_shimmer"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_front_helper"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_30"
            android:padding="@dimen/dp_10"
            android:elevation="3dp"
            android:id="@+id/cl_share_front"
            android:visibility="gone"
            android:background="@drawable/bg_interior_share_popup">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/copy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_copy_link"
                android:id="@+id/iv_copy_link"
                android:layout_marginRight="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy link"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_40"
                android:id="@+id/tv_copy_link"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@id/tv_copy_link"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#616161"
                android:id="@+id/tv_line"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/share_link"
                app:layout_constraintTop_toBottomOf="@id/tv_line"
               app:layout_constraintRight_toLeftOf="@id/tv_share"
                android:id="@+id/iv_share_link"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dp_15"
                tools:ignore="NotSibling" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share link"
                android:id="@+id/tv_share_link"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_line"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_40"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_back_helper"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_30"
            android:padding="@dimen/dp_10"
            android:elevation="4dp"
            android:id="@+id/cl_share_back"
            android:visibility="gone"
            android:background="@drawable/bg_interior_share_popup">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/copy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_back_copy_link"
                android:id="@+id/iv_back_copy_link"
                android:layout_marginRight="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy link"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_40"
                android:id="@+id/tv_back_copy_link"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@id/tv_back_copy_link"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#616161"
                android:id="@+id/tv_back_line"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/share_link"
                app:layout_constraintTop_toBottomOf="@id/tv_back_line"
                app:layout_constraintRight_toLeftOf="@id/tv_share"
                android:id="@+id/iv_back_share_link"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dp_15"
                tools:ignore="NotSibling" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share link"
                android:id="@+id/tv_back_share_link"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_back_line"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_40"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
