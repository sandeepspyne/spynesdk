<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity.CameraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/llCam"
        tools:context=".activity.CameraActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/black" >
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:padding="@dimen/dp_10"
                app:tint="@color/white" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSubcategories"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_gravity="start|center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10" />
            <LinearLayout
                android:id="@+id/llSubcategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:orientation="vertical"
                android:padding="@dimen/dp_10" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:orientation="vertical"
                    android:gravity="center">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv1"
                        android:layout_width="@dimen/dp_65"
                        android:layout_height="@dimen/dp_65"
                        android:gravity="center"
                        app:cardCornerRadius="@dimen/dp_10"
                        android:background="@drawable/bg_channel">

                        <ImageView
                            android:id="@+id/ivSubCategories"
                            android:layout_width="@dimen/dp_65"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="@dimen/dp_1"
                            android:src="@drawable/sedan" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvSubcategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_margin="@dimen/dp_5"
                        android:fontFamily="@font/medium"
                        android:textSize="@dimen/sp_7"
                        android:text="@string/sedan"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:orientation="vertical"
                    android:gravity="center">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv2"
                        android:layout_width="@dimen/dp_65"
                        android:layout_height="@dimen/dp_65"
                        android:gravity="center"
                        app:cardCornerRadius="@dimen/dp_10"
                        android:background="@drawable/bg_channel">

                        <ImageView
                            android:layout_width="@dimen/dp_65"
                            android:layout_height="@dimen/dp_65"
                            android:padding="@dimen/dp_1"
                            android:layout_gravity="center"
                            android:src="@drawable/hatchbacks"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_margin="@dimen/dp_5"
                        android:fontFamily="@font/medium"
                        android:textSize="@dimen/sp_7"
                        android:text="@string/hatchbacks"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:orientation="vertical"
                    android:gravity="center">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv3"
                        android:layout_width="@dimen/dp_65"
                        android:layout_height="@dimen/dp_65"
                        android:gravity="center"
                        app:cardCornerRadius="@dimen/dp_10"
                        android:background="@drawable/bg_channel">

                        <ImageView
                            android:layout_width="@dimen/dp_65"
                            android:layout_height="@dimen/dp_65"
                            android:padding="@dimen/dp_1"
                            android:layout_gravity="center"
                            android:src="@drawable/suv"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_margin="@dimen/dp_5"
                        android:fontFamily="@font/medium"
                        android:textSize="@dimen/sp_7"
                        android:text="@string/suv"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.camera.view.PreviewView
                    android:id="@+id/viewFinder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/imgOverlay"
                    android:layout_width="500dp"
                    android:layout_height="500dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/defaults"

                    android:contentDescription="@string/app_name" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_10">

                    <EditText
                        android:id="@+id/etSkuName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_edit"
                        android:fontFamily="@font/medium"
                        android:gravity="center"
                        android:hint="@string/sku_names"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:padding="@dimen/dp_5"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/sp_13" />
                    <ImageView
                        android:id="@+id/imgNext"
                        android:layout_toRightOf="@+id/etSkuName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/right"
                        android:visibility="gone"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/etExitDemo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_exit"
                        android:fontFamily="@font/medium"
                        android:text="@string/exit_demo_button"
                        android:layout_alignParentRight="true"
                        android:maxLines="1"
                        android:padding="@dimen/dp_5"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/sp_13" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:id="@+id/llProgress"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvshoot"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_10"
                        android:fontFamily="@font/bold"
                        android:gravity="center"
                        android:textColor="@color/light"
                        android:textSize="@dimen/sp_13" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProgress"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/dp_10"/>
                </LinearLayout>


            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llCapture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center"
            android:padding="@dimen/dp_10"
            android:background="@color/black"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="0dp">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/ivGallery"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center"
                    android:src="@mipmap/gallery" />
            </LinearLayout>

            <ImageView
                android:id="@+id/camera_capture_button"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/click_effect"
                android:layout_height="0dp"
                android:elevation="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:layout_height="0dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    app:cardCornerRadius="@dimen/dp_50">
                    <ImageView
                        android:id="@+id/ivPreview"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:fontFamily="@font/bold"
                        android:gravity="center"
                        android:elevation="@dimen/dp_5"
                        android:padding="@dimen/sp_5"
                        android:background="@drawable/bg_round" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/camera_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/black" />

</FrameLayout>
