<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/llSubCategories"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.CameraActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/llSubCategoriesImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        app:cardCornerRadius="@dimen/dp_10"
        android:background="@drawable/bg_channel">

        <ImageView
            android:id="@+id/ivCapturedImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@mipmap/defaults"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/flImageNumber"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginTop="3dp"
        android:background="@null">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_numbercircle" />

        <TextView
            android:id="@+id/tvImageCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:textSize="8sp"
            android:layout_marginTop="1dp"
            android:textColor="@color/credit_deducted"
            tools:text="1" />




    </FrameLayout>




</LinearLayout>