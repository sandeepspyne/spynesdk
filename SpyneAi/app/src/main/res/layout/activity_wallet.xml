<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".credits.WalletActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_height"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="10dp"
            android:background="@color/white"
            android:id="@+id/fl_tool_bar">

            <ImageView
                android:layout_width="@dimen/tool_bar_height"
                android:layout_height="@dimen/tool_bar_height"
                android:src="@drawable/back"
                android:padding="@dimen/dp_15"
                app:tint="@color/black"
                android:id="@+id/iv_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tittle"
                android:layout_gravity="center"
                android:text="My Wallet"
                android:fontFamily="@font/medium"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Credits"
            android:textColor="#232121"
            android:id="@+id/tv_avilable_credit"
            app:layout_constraintTop_toBottomOf="@id/fl_tool_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="45dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----"
            android:textColor="#33AF38"
            android:id="@+id/tv_credits"
            android:fontFamily="@font/medium"
            app:layout_constraintTop_toBottomOf="@id/tv_avilable_credit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="26sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/tv_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:background="#F0EEEE"
            app:layout_constraintTop_toBottomOf="@id/tv_credits"
            android:layout_marginTop="@dimen/dp_25"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Credit"
            android:background="@drawable/bg_round_button_ripple"
            app:layout_constraintTop_toBottomOf="@id/tv_line"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
           android:id="@+id/tv_add_credit"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/add_icon"
            android:drawablePadding="10dp"
            android:layout_marginTop="@dimen/dp_25"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
