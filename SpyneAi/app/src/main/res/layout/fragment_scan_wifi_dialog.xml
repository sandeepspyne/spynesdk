<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".ScanWifiDialog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"

        android:layout_gravity="center_horizontal"
        android:text="How to connect Ricoh"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#000000"
        />

    <LinearLayout
        android:layout_width="350dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/grey"
        android:layout_marginVertical="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/steps"></TextView>


    </LinearLayout>

    <TextView
        android:id="@+id/tvWifiSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_button_ripple"
        android:fontFamily="@font/medium"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="@dimen/dp_5"
        android:text="Go to wifi Setting"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />



</LinearLayout>