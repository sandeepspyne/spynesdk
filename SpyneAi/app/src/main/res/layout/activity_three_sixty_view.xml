<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tool_bar_height"
                    app:layout_constraintTop_toTopOf="parent"
                    android:elevation="10dp"
                    android:background="@color/white"
                    android:id="@+id/fl_tool_bar">

                    <ImageView
                        android:layout_width="@dimen/tool_bar_height"
                        android:layout_height="@dimen/tool_bar_height"
                        android:src="@drawable/back"
                        android:padding="@dimen/dp_15"
                        app:tint="@color/black"
                        android:id="@+id/iv_back"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_tittle"
                        android:layout_gravity="center"
                        android:text="Category Selection"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/fl_tool_bar"
                    android:id="@+id/rl_automobiles"
                    android:visibility="gone"
                    android:background="@drawable/bg_automobile_gradient">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automobiles"
                        android:id="@+id/tv_automobiles"
                        android:textColor="@color/black"
                        android:layout_marginTop="27dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automobiles"
                        android:textColor="@color/black"
                        android:layout_marginTop="27dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Suv, Luxury, Sedan"
                        android:layout_below="@id/tv_automobiles"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp" />


                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:src="@drawable/mercedes"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="27dp"
                        android:layout_marginBottom="18dp"
                        android:layout_marginRight="7dp"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_original_background"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rl_automobiles"
                    android:text="Original Background"
                    android:textColor="@color/primary"
                    android:layout_marginTop="17dp"
                    android:textSize="18sp"/>


               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toBottomOf="@id/tv_original_background"
                   android:id="@+id/iv_origianal_background">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                         android:src="@drawable/original_background"
                       android:layout_marginTop="9dp"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"/>

                   <FrameLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:layout_marginBottom="25dp"
                       android:background="@drawable/bg_three_sixty_view_ripple"
                       android:layout_gravity="bottom|center_horizontal">

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/three_sixty_view"
                               android:layout_gravity="center_vertical"
                               android:padding="7dp"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="View 360"
                               android:textColor="@color/black"
                               android:textSize="@dimen/sp_15"
                               android:paddingRight="7dp"
                               android:layout_gravity="center_vertical" />

                       </LinearLayout>

                   </FrameLayout>
               </FrameLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ai_background"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_origianal_background"
                    android:text="AI Generated Background"
                    android:textColor="@color/primary"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"/>


               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toBottomOf="@id/tv_ai_background"
                   android:id="@+id/iv_ai_bacground">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                        android:src="@drawable/ai_generated_background"
                       android:layout_marginTop="9dp"

                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"/>

                   <FrameLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:layout_marginBottom="25dp"
                       android:background="@drawable/bg_three_sixty_view_ripple"
                       android:layout_gravity="bottom|center_horizontal"
                       app:layout_constraintBottom_toTopOf="@id/tv_line"
                       app:layout_constraintLeft_toLeftOf="parent"
                       app:layout_constraintRight_toRightOf="parent">

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/three_sixty_view"
                               android:layout_gravity="center_vertical"
                               android:padding="7dp"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="View 360"
                               android:textColor="@color/black"
                               android:textSize="@dimen/sp_15"
                               android:paddingRight="7dp"
                               android:layout_gravity="center_vertical" />

                       </LinearLayout>

                   </FrameLayout>
               </FrameLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    app:layout_constraintTop_toBottomOf="@id/iv_ai_bacground"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="47dp"
                    android:layout_marginRight="47dp"
                    android:id="@+id/tv_line"/>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_constraintTop_toBottomOf="@id/tv_line"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  android:id="@+id/ll_before_after">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Before"
                      android:textColor="@color/primary"
                      android:textSize="16sp"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:layout_marginTop="20dp" />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="After"
                      android:id="@+id/tv_after"
                      android:textColor="@color/primary"
                      android:textSize="16sp"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:layout_marginTop="20dp"
                      app:layout_constraintRight_toRightOf="parent"/>

              </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_before_after"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="150dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_before_after" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:id="@+id/fl_shoot_now"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/bg_rectangle_button_ripple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_gravity="bottom|center_horizontal"
            android:paddingTop="14dp"
            android:paddingBottom="14dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shoot"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shoot 360 Now"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11dp"/>

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

</layout>
