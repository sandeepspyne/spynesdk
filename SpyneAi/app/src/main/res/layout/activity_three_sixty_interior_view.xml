<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".videorecording.ThreeSixtyInteriorViewActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_height"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="10dp"
            android:background="@color/white"
            android:id="@+id/fl_tool_bar">

            <ImageView
                android:layout_width="@dimen/tool_bar_height"
                android:layout_height="@dimen/tool_bar_height"
                android:src="@drawable/back"
                android:padding="@dimen/dp_15"
                app:tint="@color/black"
                android:id="@+id/iv_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tittle"
                android:layout_gravity="center"
                android:text="Preview"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interior Front View"
            android:id="@+id/tv_view_type"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fl_tool_bar"
            android:layout_marginTop="15dp"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/iv_front"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_view_type"
            android:layout_marginTop="20dp"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/progress_bar_front"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_front"
            app:layout_constraintBottom_toBottomOf="@id/iv_front"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interior Back View"
            android:id="@+id/tv_back_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_front"
            android:layout_marginTop="15dp"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/iv_back_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_back_view"
            android:layout_marginTop="20dp"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/progress_bar_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_back_view"
            app:layout_constraintBottom_toBottomOf="@id/iv_back_view"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
