<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dp_10"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:src="@drawable/ic_close"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvChooseShot"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="@dimen/dp_20"
        android:layout_gravity="center"
        android:fontFamily="@font/medium"
        android:textColor="@color/black"
        android:text="You can add more Product Images and Info Images."/>

    <TextView
        android:id="@+id/tvMoreAngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_13"
        android:fontFamily="@font/light"
        android:textColor="@color/black"
        android:text="Select image type to Add"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:gravity="center"
        android:layout_marginVertical="@dimen/dp_20"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvProductShoot"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Product Image"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:fontFamily="@font/medium"
            android:background="@drawable/bg_rectangle_button_ripple"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvInfoShoot"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Info Image"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/white"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:layout_gravity="right"
            android:fontFamily="@font/medium"
            android:background="@drawable/bg_rectangle_button_ripple"
            android:textSize="16sp" />

    </LinearLayout>



</LinearLayout>