<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".credits.CreditSuccessActivity"
        android:background="@color/white">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
           android:layout_marginTop="150dp"
            android:id="@+id/iv_wallet_gif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            app:layout_constraintTop_toBottomOf="@id/iv_wallet_gif"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Uh oh"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:fontFamily="@font/medium"
            android:id="@+id/tv_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_success"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            android:text="The transaction couldn't be made"
            android:gravity="center"
            android:id="@+id/tv_failed"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_failed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            android:text="Please try again"
            android:gravity="center"
            android:textColor="@color/black"
            android:id="@+id/tv_try_again"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_try_again"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            android:text="Retry"
            android:gravity="center"
            android:background="@drawable/bg_rectangle_button_ripple"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textColor="@color/white"
            android:id="@+id/tv_retry"
            android:fontFamily="@font/medium"
            android:textSize="16sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_retry"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/go_to_home"
            android:gravity="center"
            android:textColor="@color/primary"
            android:id="@+id/tv_go_to_home"
            android:textSize="14sp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
