<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_180"
        android:layout_marginRight="@dimen/dp_180"
        android:padding="@dimen/dp_15"
        android:gravity="center"
        android:background="@drawable/bg_skip_dialog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/skip_image"
            android:gravity="center"
            android:fontFamily="@font/medium"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/tvSkuNameDialog"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_15">
            <TextView
                android:id="@+id/btnNo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:padding="@dimen/dp_5"
                android:gravity="center"
                android:textColor="@color/primary"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/sp_15"
                android:background="@drawable/bg_skip"
                android:textAllCaps="false"/>

            <TextView
                android:id="@+id/btnYes"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:padding="@dimen/dp_5"
                android:gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:textColor="@color/white"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/sp_15"
                android:background="@drawable/bg_rectangle_button_ripple"
                android:textAllCaps="false"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
