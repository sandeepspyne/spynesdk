<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignInUsingOtpActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:textSize="@dimen/greeting_text_size"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/please"
            android:textColor="#484848"
            android:fontFamily="@font/light"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:textSize="@dimen/sp_13"/>

        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit"
            android:padding="@dimen/dp_10"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp">
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="15sp"
                android:fontFamily="@font/light"
                android:hint="@string/enter_email" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvErrorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/please_enter_email"
            android:fontFamily="@font/light"
            android:gravity="center"
            android:visibility="gone"
            android:layout_margin="@dimen/dp_10"
            android:textColor="@color/errorcolor"
            android:textSize="@dimen/sp_13"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tv_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="@dimen/dp_12"
            android:elevation="@dimen/dp_5"
            android:fontFamily="@font/bold"
            android:layout_margin="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/bg_round_button_ripple"
            android:textAllCaps="false"
            android:textSize="@dimen/sp_16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:gravity="center">
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#EBF0FF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#EBF0FF"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_login_with_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_with_password"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:gravity="center"
            android:elevation="@dimen/dp_5"
            android:fontFamily="@font/bold"
            android:layout_margin="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/bg_round_black_button"
            android:textSize="@dimen/sp_16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:visibility="gone"
            android:gravity="center">
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#EBF0FF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#EBF0FF"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivgoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:scaleType="fitXY"
            android:layout_marginStart="@dimen/dp_20"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/google_logo"
            tools:targetApi="lollipop" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:gravity="bottom|center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:text="@string/by"
            android:fontFamily="@font/light"
            android:gravity="center|bottom"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:textColor="@color/light"
            android:text="@string/terms"
            android:fontFamily="@font/light"
            android:gravity="center|bottom"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>