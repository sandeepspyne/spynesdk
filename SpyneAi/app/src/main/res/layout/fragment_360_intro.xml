<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <WebView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:adjustViewBounds="true"
            android:id="@+id/ivFidelity"
            android:src="@drawable/start_shoot_image"
           app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"/>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cvFeatures"
            app:layout_constraintTop_toBottomOf="@id/ivFidelity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:cardCornerRadius="@dimen/dp_10"
            android:layout_margin="@dimen/dp_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Features"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/sp_22"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_20">

                    <ImageView
                        android:layout_width="@dimen/three_sixty_feature"
                        android:layout_height="@dimen/three_sixty_feature"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_embed_feature"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Embed Directly on your website"
                        android:textColor="@color/three_sixty_features_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginLeft="@dimen/dp_15"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_15">

                    <ImageView
                        android:layout_width="@dimen/three_sixty_feature"
                        android:layout_height="@dimen/three_sixty_feature"
                        android:layout_gravity="center_vertical"
                        app:tint="@color/primary"
                        android:src="@drawable/ic_shootanywhere_feature"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Shoot Anywhere"
                        android:textColor="@color/three_sixty_features_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginLeft="@dimen/dp_15"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_20">

                    <ImageView
                        android:layout_width="@dimen/three_sixty_feature"
                        android:layout_height="@dimen/three_sixty_feature"
                        app:tint="@color/primary"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_shoot_any_car_feature"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Shoot Any Car"
                        android:textColor="@color/three_sixty_features_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginLeft="@dimen/dp_15"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_20">

                    <ImageView
                        android:layout_width="@dimen/three_sixty_feature"
                        android:layout_height="@dimen/three_sixty_feature"
                        app:tint="@color/primary"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_shoot_video_feature"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Video Shoot "
                        android:textColor="@color/three_sixty_features_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginLeft="@dimen/dp_15"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_20">

                    <ImageView
                        android:layout_width="@dimen/three_sixty_feature"
                        android:layout_height="@dimen/three_sixty_feature"
                        app:tint="@color/primary"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_fedility_feature"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Create high fidelity according to\nyour budget"
                        android:textColor="@color/three_sixty_features_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginLeft="@dimen/dp_15"/>

                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnStartClicking"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="Start Shoot"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/bg_rectangle_button_ripple"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
