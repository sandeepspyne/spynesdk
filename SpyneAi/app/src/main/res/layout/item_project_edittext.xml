<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvProjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/project_name"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/black_varient"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llProjectName"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvProjectName"
        app:layout_constraintStart_toStartOf="@+id/tvProjectName"
        android:gravity="center"
        android:background="@drawable/bg_edit">
    <EditText
    android:id="@+id/et"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@null"
    android:inputType="text"
    android:textColor="@color/black_varient"
    android:maxLines="1"
    android:textSize="@dimen/sp_18"
    tools:hint="Enter project name"
    android:layout_marginLeft="@dimen/dp_20"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>