<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5"
    android:layout_margin="@dimen/dp_5"
    android:gravity="center"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/lldialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_channel"
        android:elevation="@dimen/dp_10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:src="@drawable/ic_close"
            app:tint="@color/primary"></ImageView>

        <ImageView
            android:id="@+id/ivCoins"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/device_not_supported"
            app:tint="@color/primary" />


        <TextView
            android:id="@+id/tvReqCredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivCoins"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:text="Outdated version!\n\nplease update app to latest version"
            android:textColor="@color/primary"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/tvOKay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvReqCredit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/bg_rectangle_button_ripple"
            android:text="Okay"
            android:textAllCaps="false"
            android:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>
