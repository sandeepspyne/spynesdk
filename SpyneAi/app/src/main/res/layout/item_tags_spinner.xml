<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dp_10">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/flSpinner"
        app:layout_constraintBottom_toBottomOf="@id/flSpinner"
        android:text="Imperfection Location"
        app:layout_constraintRight_toLeftOf="@id/flSpinner"
        android:textColor="@color/tags_title_color"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/sp_14"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_tags_spinner"
        android:id="@+id/flSpinner"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_2">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              android:id="@+id/spinner"
            android:textColor="@color/primary"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/sp_16" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>