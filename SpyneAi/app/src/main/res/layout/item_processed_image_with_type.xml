<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/llBeforeAfterReplaced"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5">

    <TextView
        android:id="@+id/tvImageType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exterior"
        android:textColor="@color/primary"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="240dp"
        android:layout_height="135dp"
        android:background="@drawable/bg_edit_black_bf"
        android:elevation="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tvImageType"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5">

        <ImageView
            android:id="@+id/ivProcessed"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@mipmap/defaults"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

