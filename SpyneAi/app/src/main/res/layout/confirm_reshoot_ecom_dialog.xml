<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ecom.ConfirmReshootPortraitDialog"
    android:layout_margin="@dimen/dp_25">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBefore"
        android:layout_width="230dp"
        android:layout_height="230dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="45dp"
        app:cardCornerRadius="@dimen/dp_10">

        <ImageView
            android:id="@+id/ivBefore"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/llReshoot"
        android:layout_width="230dp"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/bg_demo"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_55"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvBefore">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_reshoot"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/primary"
            android:fontFamily="@font/poppins_medium"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llConfirm"
        android:layout_width="230dp"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/bg_rectangle_button_ripple"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llReshoot"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_15">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"/>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>